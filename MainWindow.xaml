<Window x:Class="BMI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BMI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.434,0.262">
        <Label Content="請輸入體重(kg)" HorizontalAlignment="Left" Margin="180,77,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="請輸入身高(cm)" HorizontalAlignment="Left" Margin="180,123,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="txtWeight" HorizontalAlignment="Left" Margin="285,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtHeight" HorizontalAlignment="Left" Margin="285,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="您的BMI值為" HorizontalAlignment="Left" Margin="192,0,0,0" VerticalAlignment="Center" Width="88"/>
        <TextBox x:Name="txtBMI" HorizontalAlignment="Left" Margin="285,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="120"/>
        <Button x:Name="txtButton" Content="計算" HorizontalAlignment="Left" Margin="315,162,0,0" VerticalAlignment="Top" Height="24" Width="60" Click="txtButton_Click"/>

    </Grid>
</Window>
